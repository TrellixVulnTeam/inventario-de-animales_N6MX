<div class="container letra">
    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr class="text-center">
                <th>Especie</th>
                <th>Cantidad de {{animal.especie}}</th>
                <th>Total de kilos</th>
                <th>Precio por Kilo</th>
                <th>Total</th>
                <th>Fecha</th>
            </tr>
        </thead>
        <tbody>
            {{#each venta}}
            <tr class="text-center">
                <td>{{nombre}}</td>
                <td> {{cantidad}}</td>
                <td> {{kilos}}</td>
                <td> {{valor}}</td>
                <td> {{total}}</td>
                <td>{{fecha}}</td>
            </tr>
            {{/each}}
            </tfoot>
    </table>
</div>


