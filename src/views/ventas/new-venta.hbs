<div class="col-md-5 mx-auto">
    <div class="card text-center arreglo">
        <div class="card-header add ">
            <h3>Nueva Venta </h3>
        </div>
        <div class="card-body">
            <form action="/ventas/new-venta" method="POST">
                <div class="form-group">
                    <input type="text" name="especie" class="form-control" placeholder="Especie" autofocus
                        value="{{parametros.id}}" hidden="true">
                </div>
                <div class="form-group">
                    <p class="text-left obligatorio">*</p>
                    <input type="number" min="1" max="{{parametros.cantidad}}" name="cantidad" class="form-control" placeholder="Cantidad" autofocus required>
                </div>
                <div class="form-group">
                    <p class="text-left obligatorio">*</p>
                    <input type="number" min="1" name="kilos" class="form-control" placeholder="Total de kilos vendidos" autofocus required>
                </div>
                <div class="form-group">
                    <p class="text-left obligatorio">*</p>
                    <input type="number" name="valor" class="form-control" placeholder="valor por kilo" autofocus required>
                </div>
                <div class="form-group">
                    <p class="text-left obligatorio">*</p>
                    <input type="date" name="fecha" class="form-control" placeholder="Fecha" autofocus required>
                </div>
                <div class="form-group">
                    <button class="btn arreglo add" type="submit">
                        <i class="fa fa-fw fa-lg fa-check-circle" aria-hidden="true"></i>
                        <span id="btnText">Guardar</span>
                    </button>
                    <a href="/animales">
                        <button type="button" class="btn btn-danger arreglo" data-dismiss="modal">
                            <i class="fa fa-fw fa-lg fa-times-circle" aria-hidden="true"></i>
                            <span id="btnText">cancelar</span>
                        </button>
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>