<div class="row" >
    {{#each animal}}
        <div class="col-md-3">
            <div class="card  allanimal">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between align-items-center">
                        especie:{{especie}}
                        <a href="/animales/edit/{{_id}}"><i class="far fa-edit"></i></a>
                    </h4>
                    <p>Cantidad: {{cantidad}}</p>
                    <p>Valor: {{valor}}</p>
                    <p>Fecha:{{fecha}}</p>
                    <form action="/animales/delete/{{_id}}?_method=DELETE" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="btn btn-danger btn-sm">
                            <i class="far fa-trash-alt"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    {{/each}}
</div>
